{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debugpy Gimsipei",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port=5000"
      ],
      "env": {
        "FLASK_APP": "main.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}