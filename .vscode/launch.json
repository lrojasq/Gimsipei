{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Debug",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "args": [
        "run",
        "--host=127.0.0.1",
        "--port=5010"
      ],
      "env": {
        "FLASK_APP": "main.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "jinja": true,
      "justMyCode": true
    }
  ]
}
